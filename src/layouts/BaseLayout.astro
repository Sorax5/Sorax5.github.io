---
// layout/BaseLayout.astro
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { ClientRouter } from "astro:transitions";

import '../styles/global.css';

const { pageTitle = "Mon site Astro" } = Astro.props;
---

<html lang="fr" class="h-full scroll-smooth antialiased">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Bienvenue sur le site personnel de Matteo Rauch, développeur et passionné de technologie." />
    <link rel="icon" href="/pfp.png" type="image/svg+xml" />
    <title>{pageTitle}</title>
    <ClientRouter />
</head>

<body>
    <Header />
    <main>
        <article>
            <slot />
        </article>
    </main>
    <Footer />
</body>
</html>

<style>
body {
  font-family: "Fira Code", ui-monospace, SFMono-Regular, Menlo, Monaco,
    "Roboto Mono", monospace;
  font-variant-ligatures: contextual;
  font-feature-settings: "calt" 1, "liga" 1;
  margin: 0;
  padding: 0;
  background-color: var(--background-color);
}

main {
  width: calc(100% - 2rem);
}
</style>
