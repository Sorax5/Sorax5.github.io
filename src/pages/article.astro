---
import BaseLayout from '../layouts/BaseLayout.astro';
import ArticleList from "../components/article/ArticleList.astro";
const pageTitle = "Blog";

const allPosts = Object.values(import.meta.glob('./posts/*.md', { eager: true }));
---
<BaseLayout pageTitle={pageTitle}>
    <article>
        <div>
            <h1>Blog</h1>
            <p>Bienvenue sur mon blog ! Voici les derniers articles :</p>
            <ArticleList allPosts={allPosts} />
        </div>
    </article>
</BaseLayout>

<style>
    article {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: 0;
    }

    h1 {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        text-align: center;
    }

    p {
        font-size: 1.2rem;
        line-height: 1.6;
        text-align: center;
        margin-bottom: 2rem;
    }
</style>

