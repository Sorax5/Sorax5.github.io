<section class="max-w-xl mx-auto p-4">
    <h2 class="text-2xl font-bold mb-4 text-center">Contactez-nous</h2>
    <form class="space-y-4">
        <div class="form-control">
            <label class="label" for="nom">
                <span class="label-text">Nom</span>
            </label>
            <input id="nom" type="text" placeholder="Votre nom" class="input input-bordered" required />
        </div>

        <div class="form-control">
            <label class="label" for="email">
                <span class="label-text">Email</span>
            </label>
            <input id="email" type="email" placeholder="votre@email.com" class="input input-bordered" required />
        </div>

        <div class="form-control">
            <label class="label" for="message">
                <span class="label-text">Message</span>
            </label>
            <textarea id="message" class="textarea textarea-bordered h-32" placeholder="Votre message" required></textarea>
        </div>

        <div class="form-control mt-4">
            <button type="submit" class="btn btn-primary">Envoyer</button>
        </div>
    </form>
</section>

