---
import Image from "astro/components/Image.astro";
import { Article } from "../../models/Article";

const raw = Astro.props as any;
const article = new Article(raw);
---

<li>
        <a class="blog-card" href={article.url}>
            {article.imageUrl ? <Image inferSize={true} class="cover" src={article.imageUrl} alt={article.imageAlt} /> : null}
        <div class="card-body">
            <h3>{article.title}</h3>
            <div class="meta">{article.formattedDate} Â· {article.author}</div>
            {article.description ? <div class="excerpt">{article.description}</div> : null}
            <span class="read-more">Lire l'article</span>
        </div>
    </a>
</li>
<style>
.blog-card {
  display: flex;
  gap: 0.5rem;
  background: white;
  border-radius: 10px;
  box-shadow: 0 6px 18px rgba(16, 24, 40, 0.06);
  overflow: hidden;
  text-decoration: none;
  color: inherit;
  transition: transform 180ms ease, box-shadow 180ms ease;
}
.blog-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 12px 30px rgba(16, 24, 40, 0.09);
}
.blog-card .cover {
  object-fit: cover;
  width: 180px;
  height: 180px;
  border-radius: 8px;
}
.blog-card .card-body {
  padding: 1.5rem 0.25rem;
}
.blog-card h3 {
  margin: 0 0 0.5rem 0;
  font-size: 1.1rem;
}
.blog-card .meta {
  color: var(--text-secondary-color);
  font-size: 0.9rem;
  margin-bottom: 0.5rem;
}
.blog-card .excerpt {
  color: var(--text-secondary-color);
  font-size: 0.95rem;
  margin-bottom: 0.75rem;
}
.blog-card .read-more {
  display: inline-block;
  padding: 0.4rem 0.7rem;
  border-radius: 6px;
  background: rgba(52, 152, 219, 0.08);
  color: var(--primary-color);
  font-weight: 600;
  text-decoration: none;
}

@media (max-width: 640px) {
    .blog-card {
        flex-direction: column;
        align-items: center;
        text-align: center;
    }
    .blog-card .cover {
        width: 100%;
        height: auto;
    }
}
</style>
