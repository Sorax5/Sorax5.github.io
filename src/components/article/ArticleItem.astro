---
import Image from "astro/components/Image.astro";
import { Article } from "../../models/Article";

// Astro passes raw props (frontmatter) — wrap them in our Article helper
const raw = Astro.props as any;
const article = new Article(raw);
---

<li>
        <a class="blog-card blog-card--horizontal" href={article.url}>
            {article.imageUrl ? <Image inferSize={true} class="cover cover-left" src={article.imageUrl} alt={article.imageAlt} /> : null}
        <div class="card-body">
            <h3>{article.title}</h3>
            <div class="meta">{article.formattedDate} · {article.author}</div>
            {article.description ? <div class="excerpt">{article.description}</div> : null}
            <span class="read-more">Lire l'article</span>
        </div>
    </a>
</li>
